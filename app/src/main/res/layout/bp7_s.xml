<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_getIDPS"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="GetIDPS" />
    <Button
        android:id="@+id/btn_getbattery"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Getbattery" />

    <Button
        android:id="@+id/btn_getOfflineNum"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="getOfflineNum" />

    <Button
        android:id="@+id/btn_setangle"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="SetAngle" />

    <Button
        android:id="@+id/btn_getOffineData"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="getOffineData" />

    <Button
        android:id="@+id/btn_disconnect"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Disconnect" />
    <Button
        android:id="@+id/btn_setUnit"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="setUnit" />

    <Button
        android:id="@+id/btn_getFunctionInfo"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="getFunctionInfo" />

    <TextView
        android:id="@+id/tv_return"
        android:layout_width="fill_parent"
        android:layout_height="150dp" />

</LinearLayout>
